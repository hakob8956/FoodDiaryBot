# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o

# Database Configuration (local SQLite - fallback)
DATABASE_PATH=./data/foodgpt.db

# Turso Database (cloud - optional)
# Get credentials from: turso db show <dbname> --url && turso db tokens create <dbname>
USE_TURSO=false
TURSO_DB_URL=libsql://your-db-name.turso.io
TURSO_AUTH_TOKEN=your-auth-token

# Logging
LOG_LEVEL=INFO

# GrowthBook Feature Flags (optional)
# Get your client key from https://app.growthbook.io
GROWTHBOOK_CLIENT_KEY=
GROWTHBOOK_API_HOST=https://cdn.growthbook.io

# Mini App / WebApp (optional)
WEBAPP_ENABLED=true
WEBAPP_PORT=8080
WEBAPP_URL=https://your-domain.com
